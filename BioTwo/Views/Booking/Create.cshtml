@model BioTwo.Models.Booking;

@{
    ViewData["Title"] = "Create";
}

<h1>Create Booking</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="CustomerName">Customer Name</label>
        <input asp-for="CustomerName" class="form-control" />
        <span asp-validation-for="CustomerName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CustomerEmail">Customer Email</label>
        <input asp-for="CustomerEmail" class="form-control" />
        <span asp-validation-for="CustomerEmail" class="text-danger"></span>
    </div>

    

    <input type="hidden" asp-for="Showing.ShowingID" />

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Book Seat</button>
    </div>


}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
